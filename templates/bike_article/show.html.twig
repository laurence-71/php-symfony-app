{% extends 'base.html.twig' %}

{% block title %}Bike Article
{% endblock %}

{% block body %}
	<div class="container-fluid list">
		<h1>Bike Article Summary</h1>

		<table class="table table-bordered">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ bike_article.id }}</td>
				</tr>
				<tr>
					<th>Main</th>
					<td>{{ bike_article.main }}</td>
				</tr>
				<tr>
					<th>Brake</th>
					<td>{{ bike_article.brake }}</td>
				</tr>
				<tr>
					<th>Wheel</th>
					<td>{{ bike_article.wheel }}</td>
				</tr>
				<tr>
					<th>Transmission</th>
					<td>{{ bike_article.transmission }}</td>
				</tr>
				<tr>
					<th>Crank</th>
					<td>{{ bike_article.crank }}</td>
				</tr>
				<tr>
					<th>Security</th>
					<td>{{ bike_article.security }}</td>
				</tr>
				<tr>
					<th>Comments</th>
					<td>{{ bike_article.comments }}</td>
				</tr>
			</tbody>
		</table>
		<div class="row">
			<div class="col-sm">
				<a class="btn create" href="{{ path('bike_article_index') }}">
					<i class="bi bi-chevron-left">
						Back to list</i>
				</a>
			</div>
			{% if is_granted("ROLE_MANAGER") %}
				<div class="col-sm">
					{{ include('bike_article/_delete_form.html.twig') }}
					<a class="btn edit" href="{{ path('bike_article_edit', {'id': bike_article.id}) }}">
						<i class="bi bi-pencil">
							Edit</i>
					</a>
				</div>
			{% endif %}
		</div>
	</div>
{% endblock %}
