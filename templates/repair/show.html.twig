{% extends 'base.html.twig' %}

{% block title %}Repair{% endblock %}

{% block body %}
    <h1>Repair</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ repair.id }}</td>
            </tr>
            <tr>
                <th>TakingCareDate</th>
                <td>{{ repair.takingCareDate ? repair.takingCareDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DoneDate</th>
                <td>{{ repair.doneDate ? repair.doneDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>LaborCost</th>
                <td>{{ repair.laborCost }}</td>
            </tr>
           
            <tr>
                <th>Comments</th>
                <td>{{ repair.comments }}</td>
            </tr>
            <tr>
                <th>Validation</th>
                <td>{{ repair.validation ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('repair_index') }}">back to list</a>

    <a href="{{ path('repair_edit', {'id': repair.id}) }}">edit</a>

    {{ include('repair/_delete_form.html.twig') }}
{% endblock %}
