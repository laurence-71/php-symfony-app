{% extends 'base.html.twig' %}

{% block title %}Repairs{% endblock %}

{% block body %}
<div class="container-fluid list">
    <h1>Current Repair List</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Taking Care Date</th>
                <th>Done Date</th>
                <th>Labor Cost</th>
               
                <th>Comments</th>
                <th>Validation</th>
                <th>Show</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for repair in currentRepairList %}
            <tr>
                <td>{{ repair.id }}</td>
                <td>{{ repair.takingCareDate ? repair.takingCareDate|date('Y-m-d H:i') : '' }}</td>
                <td>{{ repair.doneDate ? repair.doneDate|date('Y-m-d H:i') : '' }}</td>
                <td>{{ repair.laborCost }}</td>
               
                <td>{{ repair.comments }}</td>
                <td>{{ repair.validation ? 'Yes' : 'No' }}
                <a class="btn create" href="{{path('repair_validation',{'id':repair.id})}}">Validate</a>
                </td>
                <td>
                    <a class="btn show" href="{{ path('repair_show', {'id': repair.id}) }}"><i class="bi bi-info-square"></i></a>
                    </td>
                    <td>
                    {% if is_granted('ROLE_MANAGER') %}
                         
                    <a class="btn edit" href="{{ path('repair_edit', {'id': repair.id}) }}"><i class="bi bi-pencil"></i></a>
                
                {{ include('repair/_delete_form.html.twig') }}
              
                    {% else %}
                        <span col="2">Unauthorized access</span>
                    {% endif %}
                  
               </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn create" href="{{ path('repair_index') }}"><i class="bi bi-chevron-left"> Back to list</i></a>
    </div>
{% endblock %}
