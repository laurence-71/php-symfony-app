{% extends 'base.html.twig' %}

{% block title %}Billing index{% endblock %}

{% block body %}
    <h1>Billing index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>BillingDate</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for billing in billings %}
            <tr>
                <td>{{ billing.id }}</td>
                <td>{{ billing.billingDate ? billing.billingDate|date('Y-m-d') : '' }}</td>
                <td>{{ billing.type }}</td>
                <td>
                    <a href="{{ path('billing_show', {'id': billing.id}) }}">show</a>
                    <a href="{{ path('billing_edit', {'id': billing.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('billing_new') }}">Create new</a>
{% endblock %}
