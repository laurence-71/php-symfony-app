{% extends 'base.html.twig' %}

{% block title %}Billing{% endblock %}

{% block body %}
<div class="container-fluid list">
    <h1>Billing</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ billing.id }}</td>
            </tr>
            <tr>
                <th>Billing Date</th>
                <td>{{ billing.billingDate ? billing.billingDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ billing.type }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row">
    <div class="col-sm">
    <a class="btn create" href="{{ path('billing_index') }}"><i class="bi bi-chevron-left"> Back to list</i></a>
    </div>
    {% if is_granted("ROLE_MANAGER") %}
    
    <div class="col-sm">
     {{ include('billing/_delete_form.html.twig') }}
    <a class="btn edit" href="{{ path('billing_edit', {'id': billing.id}) }}"><i class="bi bi-pencil">Edit</i></a>
    </div>
    {% endif %}
    </div>
    </div>
{% endblock %}
