{% extends 'base.html.twig' %}

{% block title %}SecondHandStock{% endblock %}

{% block body %}
<div class="container-fluid list">
    <h1>SecondHandStock</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ second_hand_stock.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ second_hand_stock.label }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ second_hand_stock.brand }}</td>
            </tr>
            <tr>
                <th>Unit Price</th>
                <td>{{ second_hand_stock.unitPrice }}</td>
            </tr>
            <tr>
                <th>Stock Quantity</th>
                <td>{{ second_hand_stock.quantity }}</td>
            </tr>
        </tbody>
    </table>
<div class="row">
<div class="col-sm">
    <a class="btn create" href="{{ path('second_hand_stock_index') }}"><i class="bi bi-chevron-left"> Back to list</i></a>
</div>
{% if is_granted("ROLE_MANAGER") %}

<div class="col-sm">
 {{ include('second_hand_stock/_delete_form.html.twig') }}
    <a class="btn edit" href="{{ path('second_hand_stock_edit', {'id': second_hand_stock.id}) }}"><i class="bi bi-pencil"> Edit</i></a>
    </div>
    {% endif %}
</div>
</div>
{% endblock %}
