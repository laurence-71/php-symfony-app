{% extends 'base.html.twig' %}

{% block title %}Trash{% endblock %}

{% block body %}
<div class="container-fluid list">
    <h1>Trash</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trash.id }}</td>
            </tr>
            <tr>
                <th>Nature</th>
                <td>{{ trash.nature }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ trash.weight }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row">
    <div class="col-sm">
    <a class="btn create" href="{{ path('trash_index') }}"><i class="bi bi-chevron-left"> Back to list</i></a>
  </div>
  {% if is_granted("ROLE_MANAGER") %}
  <div class="col-sm">
  {{ include('trash/_delete_form.html.twig') }}
    <a class="btn edit" href="{{ path('trash_edit', {'id': trash.id}) }}"><i class="bi bi-pencil"> Edit</i></a>
</div>
  {% endif %}
    </div>
    </div>
{% endblock %}
