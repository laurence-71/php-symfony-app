{% extends 'base.html.twig' %}

{% block title %}Bike{% endblock %}

{% block body %}
<div class="container">
    <h1>Bike</h1>

    <table class="table table-borederd table-stripped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bike.id }}</td>
            </tr>
            <tr>
                <th>Serial Number</th>
                <td>{{ bike.serialNumber }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ bike.brand }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ bike.category }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ bike.color }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ bike.size }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ bike.weight }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn create" href="{{ path('bike_index') }}"><i class="bi bi-chevron-left"> Back to list</i></a>

    <a class="btn edit" href="{{ path('bike_edit', {'id': bike.id}) }}"><i class="bi bi-pencil"> Edit</i></a>

    {{ include('bike/_delete_form.html.twig') }}
    </div>
{% endblock %}
