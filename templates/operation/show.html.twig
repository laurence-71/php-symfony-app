{% extends 'base.html.twig' %}

{% block title %}Operation{% endblock %}

{% block body %}
<div class="container-fluid list">
    <h1>Operation</h1>

    <table class="table table-bordered table-stripped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ operation.id }}</td>
            </tr>
            <tr>
                <th>Reception Date</th>
                <td>{{ operation.receptionDate ? operation.receptionDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn create" href="{{ path('operation_index') }}"><i class="bi bi-chevron-left"> Back to list</i></a>

    <a class="btn edit" href="{{ path('operation_edit', {'id': operation.id}) }}"><i class="bi bi-pencil"> Edit</i></a>

    {{ include('operation/_delete_form.html.twig') }}
    </div>
{% endblock %}
