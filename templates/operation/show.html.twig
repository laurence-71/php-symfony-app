{% extends 'base.html.twig' %}

{% block title %}Operation{% endblock %}

{% block body %}
<div class="container-fluid list">
{% for message in app.flashes('message') %}
    <div class="alert alert-success" role="alert">{{message}}</div>
{% endfor %}
    <h1>Operation</h1>

    <table class="table table-bordered ">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ operation.id }}</td>
            </tr>
            <tr>
                <th>Bike Informations</th>
                <td>
                <a class="btn show" href="{{path('bike_show',{'id':operation.bike.id})}}"><i class="bi bi-info-square"></i></a>
                </td>
            </tr>
            <tr>
                <th>Reception Date</th>
                <td>{{ operation.receptionDate ? operation.receptionDate|date('Y-m-d H:i') : '' }}</td>
            </tr>
            <tr>
            <th>Details</th>
            <td>
            <div>
            {% if operation.operators !=null %}
            {% for operator in operation.operators %}
                {{operator.role}}  {{operator.firstName}} {{operator.lastName}}
            {% endfor %}
            {% endif %}
            </div>
            </td>
            </tr>
            <tr>
            <th>Actions</th>
            <td>
             <div>

             <a class="btn create" href="{{path('add_operator',{'id':operation.id})}}"><i class="bi bi-plus-square"> Add operators</i></a>
            </div>
            <div>
            <a class="btn create" href="{{path('add_repair',{'id':operation.id})}}"><i class="bi bi-plus-square"> Add a repair work</i></a>
           </div>
            <div>Add a recycling</div>
           
            </td>
            </tr>
        </tbody>
    </table>
    <div class="row">
    <div class="col-sm">
    <a class="btn create" href="{{ path('operation_index') }}"><i class="bi bi-chevron-left"> Back to list</i></a>
    </div>
    {% if is_granted('ROLE_MANAGER') %}
     <div class="col-sm">
     {{ include('operation/_delete_form.html.twig') }}
    <a class="btn edit" href="{{ path('operation_edit', {'id': operation.id}) }}"><i class="bi bi-pencil"> Edit</i></a>
    </div>
    {% endif %}
    </div>
    </div>
    {{dump()}}
{% endblock %}
