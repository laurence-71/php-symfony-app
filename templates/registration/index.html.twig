{% extends 'base.html.twig' %}

{% block title %} Registration{% endblock %}

{% block body %}
<div class="container">
        <div class="row">
            <div class="col-md-10 ml-md-auto">
                <div class="card bg-light mb-3 mt-5" style="width: 800px">
                    <div class="card-body">
                        <div class="card-header mb-3">Create a new user</div>
                        {{ form_start(formUser) }}
                        <div class="form_group">
                            <div class="col-md-12 mb-3">
                                {{ form_row(formUser.lastName, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                         <div class="form_group">
                            <div class="col-md-12 mb-3">
                                {{ form_row(formUser.firstName, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form_group">
                            <div class="col-md-12 mb-3">
                                {{ form_row(formUser.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form_group">
                            <div class="col-md-12 mb-3">
                                {{ form_row(formUser.password.first, {'attr': {'class':
                                    'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form_group">
                            <div class="col-md-12 mb-3">
                                {{ form_row(formUser.password.second, {'attr': {'class':
                                    'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                                <button type="submit" class="btn create">
                                   Submit
                                </button>
                                
                                <a class="btn create" href="{{ path("admin_users") }}"><i class="bi bi-chevron-left" >Users list</i></a>
                            </div>
                        </div>
                        {{ form_end(formUser) }}
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
