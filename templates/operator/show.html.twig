{% extends 'base.html.twig' %}

{% block title %}Operator{% endblock %}

{% block body %}
<div class="container-fluid list">
    <h1>Operator</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ operator.id }}</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>{{ operator.lastName }}</td>
            </tr>
            <tr>
                <th>First Name</th>
                <td>{{ operator.firstName }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ operator.role }}</td>
            </tr>
        </tbody>
    </table>
<div class="row">
<div class="col-sm">
    <a class="btn create" href="{{ path('operator_index') }}"><i class="bi bi-chevron-left"> Back to list</i></a>
</div>
{% if is_granted('ROLE_MANAGER') %}
<div class="col-sm">
  {{ include('operator/_delete_form.html.twig') }}
    <a href="{{ path('operator_edit', {'id': operator.id}) }}"><i class="bi bi-pencil"> Edit</i></a>
 </div> 
{% endif %}
    </div>
    </div>
{% endblock %}
