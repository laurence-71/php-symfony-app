{% extends 'base.html.twig' %}

{% block title %}Operator index{% endblock %}

{% block body %}
    <h1>Operator index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>LastName</th>
                <th>FirstName</th>
                <th>Role</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for operator in operators %}
            <tr>
                <td>{{ operator.id }}</td>
                <td>{{ operator.lastName }}</td>
                <td>{{ operator.firstName }}</td>
                <td>{{ operator.role }}</td>
                <td>
                    <a href="{{ path('operator_show', {'id': operator.id}) }}">show</a>
                    <a href="{{ path('operator_edit', {'id': operator.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('operator_new') }}">Create new</a>
{% endblock %}
